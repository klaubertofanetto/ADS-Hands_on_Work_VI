<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".bandas.EditarFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:background="@drawable/round_item"
            android:layout_marginHorizontal="25dp"
            android:layout_gravity="center_vertical"
            >


            <EditText
                android:id="@+id/edit_text_nome_banda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="12dp"
                android:layout_marginVertical="15dp"
                android:hint="@string/digite_o_nome_da_banda"
                android:background="@drawable/round_edittext"
                android:inputType="none"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/button_editar_banda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/editar"
                    android:layout_marginVertical="15dp"
                    android:background="@drawable/round_item"/>
                <Button
                    android:id="@+id/button_excluir_banda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/excluir"
                    android:layout_marginVertical="15dp"
                    android:background="@drawable/round_item"/>

            </LinearLayout>

        </LinearLayout>


</FrameLayout>