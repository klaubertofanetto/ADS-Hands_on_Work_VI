<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/round_item">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvListarColecaoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvListarColecaoBandaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight="wrap_content"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tvListarColecaoDiscoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mainBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvListarColecaoBandaNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/mainBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvListarColecaoDiscoNome"
            />
        <TextView
            android:id="@+id/tvListar_abre_parenteses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/mainBlue"
            app:layout_constraintStart_toEndOf="@id/tvListarColecaoBandaNome"
            app:layout_constraintBottom_toBottomOf="@id/tvListarColecaoBandaNome"
            android:text=" ("/>
        <TextView
            android:id="@+id/tvListarColecaoDiscoAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/mainBlue"
            app:layout_constraintStart_toEndOf="@id/tvListar_abre_parenteses"
            app:layout_constraintBottom_toBottomOf="@id/tvListarColecaoBandaNome"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/mainBlue"
            app:layout_constraintStart_toEndOf="@id/tvListarColecaoDiscoAno"
            app:layout_constraintBottom_toBottomOf="@id/tvListarColecaoBandaNome"
            android:text=")"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/trash"
            android:layout_marginVertical="10dp"
            app:tint="@color/orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="15dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>